@model IEnumerable<FinalProject.Entities.Feature>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FeatureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeatureUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeatureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeatureUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FeatureId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FeatureId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FeatureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
