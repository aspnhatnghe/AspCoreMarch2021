@model IEnumerable<MyCodeDemo.ViewModels.HangHoaVM>
@{
    ViewData["Title"] = "Index";
}

<h1>Tìm kiếm</h1>
<form asp-action="Index">
    Cần tìm: <input name="Keyword" placeholder="Nhập từ khóa" />
    Giá từ: <input name="FromPrice" type="number" step="0.01" />
    đến: <input name="ToPrice" type="number" step="0.01" />
    <button class="btn btn-primary">Tìm</button>
</form>

<table class="table">
    <tbody>
        @foreach (var hh in Model)
        {
            <tr>
                <td>
                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@hh.MaHh">@hh.TenHh</a>
                </td>
                <td>@hh.DonGia</td>
                <td>@(hh.GiamGia * 100) %</td>
                <td>@hh.GiaBan</td>
                <td>@hh.Loai</td>
                <td>@hh.NhaCungCap</td>
            </tr>
        }
    </tbody>
</table>