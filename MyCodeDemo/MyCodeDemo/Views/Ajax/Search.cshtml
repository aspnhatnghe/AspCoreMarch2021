
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<input id="txtSearch" placeholder="Tìm gì?" />
<div id="result"></div>

@section Scripts{ 
<script>
    $(function () {
        $("#txtSearch").keypress(function () {
            $.ajax({
                url: "/Ajax/ProcessSearch",
                type: "POST",
                data: {
                    keyword: $(this).val().trim()
                },
                success: function (response) {
                    $("#result").html(response);
                },
                error: function (err) {
                    alert('Lỗi: ' + err);
                }
            });
        });
    });
</script>
}